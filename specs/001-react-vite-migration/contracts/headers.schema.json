{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cross-Origin Headers Contract",
  "description": "Required COOP/COEP headers for FFmpeg.wasm SharedArrayBuffer support",
  "type": "object",
  "required": ["headers"],
  "properties": {
    "headers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["source", "headers"],
        "properties": {
          "source": {
            "type": "string",
            "description": "Path pattern for headers",
            "examples": ["/*", "/(.*)"]
          },
          "headers": {
            "type": "array",
            "minItems": 2,
            "contains": {
              "allOf": [
                {
                  "type": "object",
                  "required": ["key", "value"],
                  "properties": {
                    "key": { "const": "Cross-Origin-Opener-Policy" },
                    "value": { "const": "same-origin" }
                  }
                },
                {
                  "type": "object",
                  "required": ["key", "value"],
                  "properties": {
                    "key": { "const": "Cross-Origin-Embedder-Policy" },
                    "value": { "const": "require-corp" }
                  }
                }
              ]
            },
            "description": "Must include both COOP and COEP headers with exact values"
          }
        }
      }
    }
  },
  "examples": [
    {
      "comment": "Vercel vercel.json format",
      "headers": [
        {
          "source": "/(.*)",
          "headers": [
            {
              "key": "Cross-Origin-Opener-Policy",
              "value": "same-origin"
            },
            {
              "key": "Cross-Origin-Embedder-Policy",
              "value": "require-corp"
            }
          ]
        }
      ]
    },
    {
      "comment": "Netlify _headers format (text file, shown as JSON for schema validation)",
      "headers": [
        {
          "source": "/*",
          "headers": [
            {
              "key": "Cross-Origin-Opener-Policy",
              "value": "same-origin"
            },
            {
              "key": "Cross-Origin-Embedder-Policy",
              "value": "require-corp"
            }
          ]
        }
      ]
    }
  ]
}
